import React, { useState, useEffect } from 'react';
import { PlayCircle, PauseCircle, AlertTriangle, CheckCircle, Settings, TrendingUp, Package } from 'lucide-react';

const AutoPartsSimulation = () => {
  const [isRunning, setIsRunning] = useState(false);
  const [time, setTime] = useState(0);
  const [defectRate, setDefectRate] = useState(15);
  const [machineHealth, setMachineHealth] = useState(85);
  const [productionEfficiency, setProductionEfficiency] = useState(72);
  const [alerts, setAlerts] = useState([]);
  const [metrics, setMetrics] = useState({
    inspected: 0,
    defectsDetected: 0,
    maintenanceScheduled: 0,
    ordersOptimized: 0
  });

  useEffect(() => {
    if (!isRunning) return;

    const interval = setInterval(() => {
      setTime(t => t + 1);
      
      // Quality Inspection Agent
      if (Math.random() > 0.7) {
        const defectDetected = Math.random() < (defectRate / 100);
        setMetrics(m => ({
          ...m,
          inspected: m.inspected + 1,
          defectsDetected: defectDetected ? m.defectsDetected + 1 : m.defectsDetected
        }));
        
        if (defectDetected && Math.random() > 0.8) {
          addAlert('Quality', 'Defect pattern detected in Station 3', 'warning');
          setDefectRate(prev => Math.max(3, prev - 0.5));
        }
      }

      // Predictive Maintenance Agent
      if (Math.random() > 0.85) {
        const healthChange = Math.random() > 0.5 ? -2 : 1;
        setMachineHealth(prev => {
          const newHealth = Math.max(60, Math.min(100, prev + healthChange));
          if (newHealth < 75 && Math.random() > 0.7) {
            addAlert('Maintenance', `Machine CNC-04 health at ${newHealth}%`, 'error');
            setMetrics(m => ({ ...m, maintenanceScheduled: m.maintenanceScheduled + 1 }));
            return Math.min(100, newHealth + 10);
          }
          return newHealth;
        });
      }

      // Production Optimization Agent
      if (Math.random() > 0.8) {
        setProductionEfficiency(prev => {
          const change = Math.random() * 4 - 1;
          const newEff = Math.max(70, Math.min(95, prev + change));
          if (newEff > 88 && Math.random() > 0.85) {
            addAlert('Optimization', 'Production schedule optimized for rush order', 'success');
            setMetrics(m => ({ ...m, ordersOptimized: m.ordersOptimized + 1 }));
          }
          return newEff;
        });
      }

    }, 1000);

    return () => clearInterval(interval);
  }, [isRunning, defectRate]);

  const addAlert = (agent, message, type) => {
    const newAlert = {
      id: Date.now(),
      agent,
      message,
      type,
      time: new Date().toLocaleTimeString()
    };
    setAlerts(prev => [newAlert, ...prev].slice(0, 5));
  };

  const resetSimulation = () => {
    setIsRunning(false);
    setTime(0);
    setDefectRate(15);
    setMachineHealth(85);
    setProductionEfficiency(72);
    setAlerts([]);
    setMetrics({ inspected: 0, defectsDetected: 0, maintenanceScheduled: 0, ordersOptimized: 0 });
  };

  const getStatusColor = (value, thresholds) => {
    if (value >= thresholds.good) return 'text-green-600';
    if (value >= thresholds.warning) return 'text-yellow-600';
    return 'text-red-600';
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 to-slate-800 p-8">
      <div className="max-w-7xl mx-auto">
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold text-white mb-2">AutoParts Inc. AI Agent Simulation</h1>
          <p className="text-slate-300">Real-time Smart Manufacturing System Demo</p>
        </div>

        {/* Control Panel */}
        <div className="bg-slate-800 rounded-lg p-6 mb-6 shadow-xl border border-slate-700">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-4">
              <button
                onClick={() => setIsRunning(!isRunning)}
                className={`flex items-center gap-2 px-6 py-3 rounded-lg font-semibold transition-all ${
                  isRunning 
                    ? 'bg-red-600 hover:bg-red-700 text-white' 
                    : 'bg-green-600 hover:bg-green-700 text-white'
                }`}
              >
                {isRunning ? <PauseCircle size={20} /> : <PlayCircle size={20} />}
                {isRunning ? 'Pause' : 'Start'} Simulation
              </button>
              <button
                onClick={resetSimulation}
                className="px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg font-semibold transition-all"
              >
                Reset
              </button>
            </div>
            <div className="text-right">
              <div className="text-slate-400 text-sm">Runtime</div>
              <div className="text-2xl font-mono text-white">
                {Math.floor(time / 60)}:{(time % 60).toString().padStart(2, '0')}
              </div>
            </div>
          </div>
        </div>

        {/* Key Metrics Dashboard */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div className="bg-slate-800 rounded-lg p-6 shadow-xl border border-slate-700">
            <div className="flex items-center justify-between mb-2">
              <h3 className="text-slate-300 font-semibold">Defect Rate</h3>
              <Package className="text-blue-400" size={24} />
            </div>
            <div className={`text-4xl font-bold mb-2 ${getStatusColor(100 - defectRate, { good: 90, warning: 80 })}`}>
              {defectRate.toFixed(1)}%
            </div>
            <div className="text-sm text-slate-400">Target: &lt;3% (Currently {defectRate < 8 ? 'Good' : 'Improving'})</div>
          </div>

          <div className="bg-slate-800 rounded-lg p-6 shadow-xl border border-slate-700">
            <div className="flex items-center justify-between mb-2">
              <h3 className="text-slate-300 font-semibold">Machine Health</h3>
              <Settings className="text-purple-400" size={24} />
            </div>
            <div className={`text-4xl font-bold mb-2 ${getStatusColor(machineHealth, { good: 85, warning: 75 })}`}>
              {machineHealth.toFixed(0)}%
            </div>
            <div className="text-sm text-slate-400">Status: {machineHealth > 85 ? 'Excellent' : machineHealth > 75 ? 'Good' : 'Attention Needed'}</div>
          </div>

          <div className="bg-slate-800 rounded-lg p-6 shadow-xl border border-slate-700">
            <div className="flex items-center justify-between mb-2">
              <h3 className="text-slate-300 font-semibold">Production Efficiency</h3>
              <TrendingUp className="text-green-400" size={24} />
            </div>
            <div className={`text-4xl font-bold mb-2 ${getStatusColor(productionEfficiency, { good: 85, warning: 75 })}`}>
              {productionEfficiency.toFixed(0)}%
            </div>
            <div className="text-sm text-slate-400">Optimized: {metrics.ordersOptimized} orders</div>
          </div>
        </div>

        {/* Agent Activity Metrics */}
        <div className="bg-slate-800 rounded-lg p-6 mb-6 shadow-xl border border-slate-700">
          <h3 className="text-xl font-bold text-white mb-4">AI Agent Activity</h3>
          <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div className="bg-slate-700 rounded-lg p-4">
              <div className="text-slate-400 text-sm mb-1">Components Inspected</div>
              <div className="text-3xl font-bold text-blue-400">{metrics.inspected}</div>
            </div>
            <div className="bg-slate-700 rounded-lg p-4">
              <div className="text-slate-400 text-sm mb-1">Defects Detected</div>
              <div className="text-3xl font-bold text-red-400">{metrics.defectsDetected}</div>
            </div>
            <div className="bg-slate-700 rounded-lg p-4">
              <div className="text-slate-400 text-sm mb-1">Maintenance Scheduled</div>
              <div className="text-3xl font-bold text-purple-400">{metrics.maintenanceScheduled}</div>
            </div>
            <div className="bg-slate-700 rounded-lg p-4">
              <div className="text-slate-400 text-sm mb-1">Orders Optimized</div>
              <div className="text-3xl font-bold text-green-400">{metrics.ordersOptimized}</div>
            </div>
          </div>
        </div>

        {/* Alert Feed */}
        <div className="bg-slate-800 rounded-lg p-6 shadow-xl border border-slate-700">
          <h3 className="text-xl font-bold text-white mb-4 flex items-center gap-2">
            <AlertTriangle className="text-yellow-400" size={24} />
            Real-time Agent Alerts
          </h3>
          <div className="space-y-2">
            {alerts.length === 0 ? (
              <div className="text-slate-400 text-center py-8">
                No alerts yet. Start simulation to see AI agents in action.
              </div>
            ) : (
              alerts.map(alert => (
                <div
                  key={alert.id}
                  className={`flex items-start gap-3 p-4 rounded-lg border-l-4 ${
                    alert.type === 'error' 
                      ? 'bg-red-900/20 border-red-600' 
                      : alert.type === 'warning'
                      ? 'bg-yellow-900/20 border-yellow-600'
                      : 'bg-green-900/20 border-green-600'
                  }`}
                >
                  {alert.type === 'error' ? (
                    <AlertTriangle className="text-red-400 flex-shrink-0" size={20} />
                  ) : alert.type === 'warning' ? (
                    <AlertTriangle className="text-yellow-400 flex-shrink-0" size={20} />
                  ) : (
                    <CheckCircle className="text-green-400 flex-shrink-0" size={20} />
                  )}
                  <div className="flex-1">
                    <div className="flex items-center justify-between mb-1">
                      <span className="font-semibold text-white">{alert.agent} Agent</span>
                      <span className="text-xs text-slate-400">{alert.time}</span>
                    </div>
                    <div className="text-sm text-slate-300">{alert.message}</div>
                  </div>
                </div>
              ))
            )}
          </div>
        </div>

        {/* Footer Note */}
        <div className="mt-6 text-center text-slate-400 text-sm">
          <p>This simulation demonstrates three AI agent types working in concert:</p>
          <p className="mt-1">Quality Inspection • Predictive Maintenance • Production Optimization</p>
        </div>
      </div>
    </div>
  );
};

export default AutoPartsSimulation;